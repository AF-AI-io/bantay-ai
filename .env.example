# Bantay-AI Development Environment Configuration
# Note: Production uses Netlify environment variables (see .env.production.example)

# API Configuration (Development Only)
# VITE_API_BASE_URL is not used in production - Netlify functions handle API calls
VITE_API_BASE_URL=http://localhost:3001/api/v1

# Map Configuration
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_MAP_MAX_ZOOM=19

# App Configuration
VITE_APP_NAME=Bantay-AI
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_ENABLE_DEBUG=true
VITE_MOCK_DATA=true  # Set to false when testing against real API

# PWA Configuration
VITE_THEME_COLOR=#0057B7
VITE_BACKGROUND_COLOR=#F9FAFB

# Emergency Contacts
VITE_EMERGENCY_NUMBER=911

# Feature Flags (Production)
# VITE_ENABLE_PUSH_NOTIFICATIONS=false  # Removed in production
VITE_ENABLE_BACKGROUND_SYNC=true
VITE_ENABLE_OFFLINE_MODE=true